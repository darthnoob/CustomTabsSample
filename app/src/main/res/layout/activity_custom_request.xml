<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_custom_request"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sakebook.android.sample.customtabssample.request.CustomRequestActivity">

    <Button
        android:id="@+id/button_request_normal"
        android:text="Launch with normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_request_referrer"
        android:text="Launch with custom referrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_request_header"
        android:text="Launch with custom header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
